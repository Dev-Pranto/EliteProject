        // Get the modal
        var modal = document.getElementById("resultModal");
        var span = document.getElementsByClassName("close")[0];

        // Close modal functions
        span.onclick = function() {
            modal.style.display = "none";
        }

        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }

        function closeModal() {
            modal.style.display = "none";
        }

        // Function to show modal with message
        function showModal(message, isSuccess) {
            var icon = document.getElementById("modalIcon");
            var msg = document.getElementById("modalMessage");

            if (isSuccess) {
                icon.className = "modal-icon success-icon";
                icon.innerHTML = '<i class="fas fa-check-circle"></i>';
            } else {
                icon.className = "modal-icon error-icon";
                icon.innerHTML = '<i class="fas fa-times-circle"></i>';
            }

            msg.textContent = message;
            modal.style.display = "block";
        }

        // Handle form submission with AJAX
        $(document).ready(function() {
            $('#verifyForm').on('submit', function(e) {
                e.preventDefault();

                // Get the code value
                var code = $('input[name="code"]').val();

                // Simple validation
                if (!code || code.length !== 8) {
                    showModal('দয়া করে ৮ ডিজিটের একটি বৈধ কোড লিখুন', false);
                    return;
                }

                // Show loading state
                $('.submit').text('যাচাই করা হচ্ছে...').prop('disabled', true);

                $.ajax({
                    type: 'POST',
                    url: '/verify',
                    data: { code: code },
                    success: function(response) {
                        // Reset button
                        $('.submit').text('যাচাই করুন').prop('disabled', false);

                        // Show the result in modal
                        showModal(response.message, response.success);
                    },
                    error: function(xhr, status, error) {
                        // Reset button
                        $('.submit').text('যাচাই করুন').prop('disabled', false);

                        console.error("AJAX Error:", status, error);
                        showModal('দুঃখিত, একটি ত্রুটি occurred. পরে আবার চেষ্টা করুন।', false);
                    }
                });
            });
        });
    </script>

